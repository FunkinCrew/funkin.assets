import funkin.graphics.FunkinSprite;

class PicoBloodPool extends FunkinSprite
{
  var extendBloodPool:Bool = false;

  public function new(x:Float, y:Float)
  {
    super(x, y);

    loadTextureAtlas("philly/erect/bloodPool", "week3");

    animation.onFinish.addOnce((_) -> {
      extendBloodPool = true;
    });

    this.visible = false;
  }

  public function doAnim():Void
  {
    animation.play("", true);
    this.visible = true;
  }

  override public function update(elapsed:Float)
  {
    super.update(elapsed);

    if (extendBloodPool)
    {
      var extendFactor:Float = 0.02 * elapsed;
      this.scale.set(this.scale.x + extendFactor, this.scale.y + extendFactor);
    }
  }
}
